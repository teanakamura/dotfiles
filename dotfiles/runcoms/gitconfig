[user]
  # name =
  # email =

[core]
  editor = nvim

[include]
  path = ~/.config/git/gitconfig.local

[diff]
  tool = nvimdiff

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd l\""

[merge]
  tool = nvimdiff

[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\""

[push]
	default = simple
[pull]
	rebase = false
