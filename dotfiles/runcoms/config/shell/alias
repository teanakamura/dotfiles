alias ll='ls -lh'
alias la='ls -a'
alias ..='cd ..'
alias bd='cd -' #back directory
alias python='python3'
alias pip='pip3'
alias activate='source ./bin/activate'
alias relogin='exec $SHELL -l'
alias open='open .'
alias jn='jupyter notebook'
alias jl='jupyter lab'
alias diff='diff -y'
alias cdiff='colordiff -y'
alias cdiffscl='colordiff -y --suppress-common-lines'
alias less='less -R'
alias du='du -h'
alias grepn='grep -rn'
alias ipy="python -c 'import IPython; IPython.terminal.ipapp.launch_new_instance()'"
alias tarc='tar -zcvf'
alias tarx='tar -zxvf'
alias v='nvim'
alias vdiff='nvim -d'
alias gdiff='git difftool'
alias g='git'
alias gs='git status'
alias gb='git branch'
alias pg='pgrep -fl -u `whoami`'
alias pk='pkill -fln -u `whoami`'
alias dd='dirs -v'
alias d='dirs -v'
alias colors='for c in {000..255}; do echo -n "\e[38;5;${c}m $c]"; [ $(($c%16)) -eq 15 ] && echo; done; echo'
alias s='source'
alias zshrc='source ~/.zshrc'
